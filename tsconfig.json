{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ESNext", "ScriptHost"],
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
